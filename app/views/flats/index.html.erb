<h1>All our flats (<%= @flats.count %>)</h1>
<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-xl-4 col-lg-6 col-12">
        <div class="card card-flat">
          <img class="card-img-top card-img-flat" src="https://source.unsplash.com/random" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.address %></p>
            <p class="card-text"><i class="fas fa-user-friends"></i> <%= flat.number_of_guests %>  <i class="fas fa-euro-sign"></i>  <%= flat.price_per_night %></p>
            <a href="#" class="btn btn-primary">More info</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
